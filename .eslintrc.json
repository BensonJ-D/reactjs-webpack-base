{
    "settings": {
        "react": {
            "version": "latest"
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "eslint-plugin-html"
    ],
    "rules": {
        "semi": [1, "always"],
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "space-before-function-paren": ["error", "never"]
    }
}
